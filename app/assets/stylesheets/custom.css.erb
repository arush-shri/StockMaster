@import "bootstrap";

body {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  margin: 0;
  padding: 0;
}

body::before {
  content: "";
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: url(<%= asset_url('back.png') %>);
  background-size: cover;
  background-position: center;
  filter: blur(3px);
  z-index: -1;
}
.container {
  max-width: 400px;
  padding: 20px;
  background-color: transparent;
}
