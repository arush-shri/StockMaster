<body>
<%= stylesheet_link_tag "custom_home", media: 'all', 'data-turbolinks-track' => true %>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <%= image_tag("stockMasterLogo.png", alt: "Stock Master Logo", style: "height:50px")%>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" style="font-size: 18px;padding-left: 20px">Hello <%= @username%>,</a>
          </li>
          <li class="nav-item"><%= link_to "Create order", orders_create_path, class: "nav-link", style: "font-size: 19px;" %></li>
          <li class="nav-item"><%= link_to "Track order", orders_track_path, class: "nav-link", style: "font-size: 19px;" %></li>
          </ul>
        </li>
        </ul>
        <form class="d-flex " style="flex-grow: 1;padding-left: 20px; padding-right: 20px">
          <input class="form-control me-2 ms auto" type="search" placeholder="Search for suppliers" aria-label="Search" >
          <button class="btn btn-outline-success" type="submit" >Search</button>
        </form>
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0" style="margin-right: 20px;">
          <li class="nav-item">
            <%= link_to "Suppliers Info", suppliers_info_path, class: "nav-link", style: "font-size: 19px;" %>
          </li>
        </ul>
        <div style = "padding-left: 30px;" >
        <%= button_to "Log out", Current.session, method: :delete, class: "btn btn-outline-warning"%>
        </div>
      </div>
    </div>
    </nav>
    <br>

    <div class="line"></div> <!-- Horizontal line -->
    
        <div class="container">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th><a>Supplier Name</a></th>
                        <th><a>Email</a></th>
                        <th><a>Contact No</a></th>
                        <th><a>Address</a></th>
                    
                    </tr>
                </thead>
                <tbody>
                    <% @supps.each do |supplier|%>
                        <tr>
                            <td><%= supplier.supplier_name %></td>
                            <td><%= supplier.email %></td>
                            <td><%= supplier.phone %></td>
                            <td><%= supplier.address %></td>
                        </tr>
                    <%end%>        
                </tbody>
            </table>
        </div>

    <!-- Include Bootstrap 3 JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</body>